<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SneakerDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/namelb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Trinity Sneakers"
                android:textColor="@color/Second_Color"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <View
                android:id="@+id/colline"
                android:layout_width="220dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="24dp"
                android:background="@color/first_Color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/namelb" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="320dp"
                android:layout_height="360dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/namelb">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/trinity_sneakers_cover" />

<!--                        <ImageView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="250dp"-->
<!--                        android:layout_gravity="bottom"-->
<!--                        android:layout_marginTop="170dp"-->
<!--                        android:elevation="100dp"-->
<!--                        android:scaleType="fitXY"-->
<!--                        android:src="@drawable/photo_gredient" />-->

                </FrameLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/destag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Description"
                android:textColor="@color/Second_Color"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card"></TextView>

            <View
                app:layout_constraintTop_toBottomOf="@id/destag"
                android:layout_width="120dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="24dp"
                android:background="@color/first_Color"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="0dp"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="24dp"
                android:text="The Trinity is all about our Futro aesthetic, taking heritage inspiration and reinterpreting it with a modern twist. This edition features a mesh base with cool overlay details and a sporty silhouette, for sneakers that pack a punch. Best of all, the SoftFoam+ sockliner keeps you feeling comfortable all day long."
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/destag">
            </TextView>

            <TextView
                android:id="@+id/styletag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Color"
                android:textColor="@color/Second_Color"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/des"></TextView>

            <View
                app:layout_constraintTop_toBottomOf="@id/styletag"
                android:layout_width="70dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="24dp"
                android:background="@color/first_Color"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="0dp"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="24dp"
                android:text="PUMA White-PUMA Black-Cool Light Gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/styletag">
            </TextView>

            <TextView
                android:id="@+id/pricetag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Price"
                android:textColor="@color/Second_Color"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/style"></TextView>

            <View
                app:layout_constraintTop_toBottomOf="@id/pricetag"
                android:layout_width="60dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="24dp"
                android:background="@color/first_Color"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="0dp"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="24dp"
                android:text="Rs. 12000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pricetag">
            </TextView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price"
                android:id="@+id/btnPay"
                style="@android:style/Widget.Button"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/background_btn"
                android:fontFamily="@font/poppins_bold"
                android:text="BUY NOW"
                android:textColor="#F6F6F6"
                android:textSize="18sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>