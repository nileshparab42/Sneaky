                                android:layout_marginTop="20dp"
                                android:text="50% Off on Nike Sneakers"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:src="@drawable/ad3">
                        </ImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>





            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/collectiontag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Collection"
            android:textColor="@color/Second_Color"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ads"></TextView>

        <View
            android:id="@+id/colline"
            app:layout_constraintTop_toBottomOf="@id/collectiontag"
            android:layout_width="120dp"
            android:layout_height="4dp"
            android:layout_marginHorizontal="24dp"
            android:background="@color/first_Color"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/hl2"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/colline"
            app:layout_constraintVertical_bias="0.0">


            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/colline"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="215dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RecyclerSneakers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal" />

            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

