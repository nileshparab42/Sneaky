<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.cardview.widget.CardView
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:id="@+id/card_cart"
android:layout_width="300dp"
android:layout_gravity="center"
android:layout_height="370dp"
android:layout_marginTop="10dp"
android:layout_marginBottom="20dp"
app:cardCornerRadius="15dp"
app:cardElevation="8dp">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:scaleType="centerCrop"
        android:src="@drawable/trinity_sneakers_cover" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Trinity Sneakers"
        android:textColor="#1E1E1E"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/style"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintStart_toEndOf="@+id/Rs"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="PUMA White-Black-Cool Light Gray"
            android:textColor="@color/Second_Color"
            android:onClick="onClickReadme" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/email"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toEndOf="@+id/Rs"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="nileshparab5623@gmail.com"
            android:textColor="@color/Second_Color"
            android:onClick="onClickReadme"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">


        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Date of Order: "
            android:fontFamily="@font/poppins"
            android:textColor="@color/first_Color"
            android:onClick="onClickReadme"/>

        <TextView
            android:id="@+id/date"
            app:layout_constraintStart_toEndOf="@+id/Rs"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="21/06/23"
            android:textColor="@color/Second_Color"
            android:onClick="onClickReadme"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/Rs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Price: â‚¹"
            android:fontFamily="@font/poppins"
            android:textColor="@color/first_Color"
            android:onClick="onClickReadme" />

        <TextView
            android:id="@+id/price"
            app:layout_constraintStart_toEndOf="@+id/Rs"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="1200"
            android:textColor="@color/Second_Color"
            android:onClick="onClickReadme" />

    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>